<%= form_for(@event) do |f| %>
    <div class="form-group" >
      <%= f.label :title %>
      <%= f.text_field :title, label: "Event title", class:"form-control" %>
    </div>
    <div class="form-group" >
        <%= f.label :description %>
        <%= f.text_field :description, label: "Description of event", class:"form-control" %>
    </div>
    <div class="form-group" >
        <%= f.label :location %>
        <%= f.text_field :location, label: "Location of event" , class:"form-control" %>
    </div>
    <div class="form-group" >
        <%= f.label :plan %>
        
        <%= f.select(:plan, options_for_select([['PAID','PAID'],['FREE','FREE']])) %>
    </div>
    <%= f.label :date %>
        <div class="form-group" >
        <%= f.date_field :date, label: "Date of event", class:"form-control"%>
    </div>
    <%= submit_tag "Submit", class:"form-control btn-success", class:"form-control btn-success" %>
<% end %>
